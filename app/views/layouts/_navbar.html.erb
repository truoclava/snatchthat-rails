<ul class="navbar navbar-default navbar-static-top">
  <div class="container-fluid">
    <div class="nav">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a href = '/' class="navbar-brand">Snatch That</a>
    </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
      <form action="/searches" class="navbar-form navbar-right" role="search">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search" id="keyword" name="search[keyword]"  >
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>

        <ul class="nav navbar-nav navbar-right">
         <% if user_signed_in? %>
         <% if !current_user.avatar_file_name.blank? %>
          <li class = 'profile-image-50'><%= image_tag(current_user.avatar.url(:thumb)) %></li>
          <% end %>
         <li class = "dropdown">
           <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Menu<span class="caret"></span></a>
           <ul class="dropdown-menu" role="menu">
              <li><a href = "/users/<%= current_user.slug %>">My Profile</a> </li>
              <li><a href = "/">My Closets</a></li>
              <li><a href="/items/">All Items</a></li>
              <li><a href="#">Trending</a></li>
              <li class="divider"></li>
              <li><%= link_to 'Settings', edit_user_registration_path, id: 'settings-text' %></li>
              <li class="divider"></li>
              <li><%= link_to "Sign Out", destroy_user_session_path, id: 'sign-out-text', :method => :delete %></li>
            </ul>
         </li>

         <% else %>
          <li class="dropdown">
            <%= form_for(resource, :as => resource_name, :url => new_user_session_path, :html => { :class => 'navbar-form navbar-right' }) do |f| %>
                <%= f.text_field :login, :placeholder => 'Username', :class => "form-control" %>
                <%= f.password_field :password, :placeholder => 'Password', :class => "form-control" %>
                <%= f.submit 'Sign In', :class => 'btn btn-default' %>
            <% end %>
         <% end %>
        </ul>

    </div>

  </div>
  </div>
